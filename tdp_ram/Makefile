include ../mem.mk

VCD2DROM = python vcd2wavedrom.py --input tdp_ram.vcd --config tdp_ram.json --output tdp_ram.drom
PNG = npx wavedrom-cli -i tdp_ram.drom -p tdp_ram_print.png

# generate .hex file from string, checks from ram if string is valid
run:
	@$(GEN_HEX1) && $(GEN_HEX2)
	@$(CMPLR)
	@./a.out

sim:
	$(GEN_HEX1) && $(GEN_HEX2)
	$(CMPLR) $(VCD)
	./a.out
	$(VCD2DROM) && $(PNG)
	$(GTKW) $(WSRC)



clean:
	@rm -f ./a.out *.vcd *.hex *.drom *.png *~ *.pyc

.PHONY: clean
